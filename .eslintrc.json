{
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": ["!**/*", "node_modules/"],
    "overrides": [
      {
        "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
        "rules": {}
      },
      {
        "files": ["*.ts", "*.tsx"],
        "rules": {}
      },
      {
        "files": ["*.js", "*.jsx"],
        "rules": {}
      },
      {
        "files": ["*.json"],
        "parser": "jsonc-eslint-parser",
        "rules": {}
      }
    ]
  }